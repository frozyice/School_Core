@model School_Core.ViewModels.Lectures.EnrollStudentViewModel

@if (!ViewContext.ViewData.ModelState.IsValid)
{
    <div asp-validation-summary="All" class="alert alert-danger" role="alert">
        <strong>Failed!</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<div class="container">
    <div class="col-md-6">
        <form asp-controller="Lecture" asp-action="EnrollStudent" method="post">
            <input asp-for="LectureId"/>
            <div class="form-group">


                <table class="table">
                    <thead>
                    <tr>
                        <th>Student</th>
                        <th>Can Enroll</th>
                    </tr>
                    </thead>
                    <tbody>

                    @foreach (var student in Model.StudentsNotEnrolled)
                    {
                        <tr>
                            <td>@student.Name</td>
                            <td>@student.canEnroll</td>
                        </tr>
                    }

                    </tbody>
                </table>

                <label asp-for="StudentName"></label>
                <input asp-for="StudentName" class="form-control"/>
                <span asp-validation-for="StudentName" class="text-danger"></span>

            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary form-control">Enroll Students</button>
            </div>
        </form>
    </div>
</div>